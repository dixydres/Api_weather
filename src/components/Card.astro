---
const { name, lastName, gender, age, picture, nat, phone, email } = Astro.props;
---
<div class="max-w-md mx-auto bg-white rounded-2xl shadow-lg overflow-hidden transform hover:scale-105 transition-transform duration-300 border border-gray-100">
    <div class="flex">
 
        <div class="relative w-48 h-64 bg-gradient-to-br from-yellow-400 to-yellow-500 overflow-hidden flex-shrink-0">
            {picture ? (
                <img src={picture} alt="Profile picture" class="w-full h-full object-cover" />
            ) : (
                <div class="w-full h-full flex items-center justify-center">
                    <svg class="w-16 h-16 text-white opacity-70" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 2s4">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M5.121 17.804A13.937 13.937 0 0112 15c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                </div>
            )}
        </div>
        
        <!-- Section contenu à droite -->
        <div class="flex-1 p-6 flex flex-col justify-between">
            <!-- Header avec nom et coeur -->
            <div class="flex items-start justify-between mb-4">
                <div class="flex items-center space-x-3">
                    <div class="w-10 h-10 bg-orange-400 rounded-full flex items-center justify-center">
                        <span class="text-white font-bold text-sm">{name?.charAt(0) || 'U'}</span>
                    </div>
                    <div>
                        <h3 class="text-lg font-semibold text-gray-800">{name}</h3>
                        <p class="text-gray-500 text-xs">{age} ans</p>
                    </div>
                </div>
                <button class="text-gray-300 hover:text-red-500 transition-colors duration-200 p-1">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                    </svg>
                </button>
            </div>
            
            <!-- Informations compactes -->
            <div class="space-y-2 mb-4 flex-1">
                <div class="flex items-center text-xs text-gray-600">
                    <span class="font-medium">{gender}</span>
                    <span class="mx-2">•</span>
                    <span>{nat}</span>
                </div>
                <div class="text-xs text-gray-600 truncate">{email}</div>
                <div class="text-xs text-gray-600">{phone}</div>
            </div>
            
            <!-- Boutons d'action en bas -->
            <div class="flex space-x-2">
                <button class="flex-1 bg-blue-500 hover:bg-blue-600 text-white py-2 px-3 rounded-lg font-medium text-xs transition-colors duration-200 flex items-center justify-center">
                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                    </svg>
                    Chat
                </button>
                <button class="flex-1 bg-gray-100 hover:bg-gray-200 text-gray-700 py-2 px-3 rounded-lg font-medium text-xs transition-colors duration-200 flex items-center justify-center">
                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21L6 13.26c1.123 2.3 2.992 4.169 5.292 5.292L15.454 14.3a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                    </svg>
                    Call
                </button>
                <button class="bg-gray-100 hover:bg-gray-200 text-gray-700 py-2 px-3 rounded-lg font-medium text-xs transition-colors duration-200 flex items-center justify-center">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h.01M12 12h.01M19 12h.01M6 12a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0z"/>
                    </svg>
                </button>
            </div>
        </div>
    </div>
</div>
